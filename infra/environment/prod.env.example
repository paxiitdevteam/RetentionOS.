# Production Environment Variables
# Copy this file to prod.env and fill in your actual values
# ⚠️ NEVER commit prod.env to git!

NODE_ENV=production
PORT=3000

# Database (MariaDB/MySQL)
# Replace with your actual production database credentials
DATABASE_URL=mysql://retentionos:YOUR_PRODUCTION_PASSWORD@db:3306/retentionos
DB_HOST=db
DB_PORT=3306
DB_NAME=retentionos
DB_USER=retentionos
DB_PASSWORD=YOUR_PRODUCTION_DATABASE_PASSWORD

# Redis
REDIS_URL=redis://redis:6379

# JWT
# Generate a strong secret: openssl rand -base64 64
# MUST be at least 32 characters for production
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# API Keys
# Generate a strong secret: openssl rand -base64 64
API_KEY_SECRET=YOUR_PRODUCTION_API_KEY_SECRET

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
# Use LIVE keys for production
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# Frontend
DASHBOARD_URL=https://dashboard.retentionos.com
WIDGET_CDN_URL=https://cdn.retentionos.com

